# RegattaDesk Docker Compose Environment Configuration
# Copy this file to .env and customize for your environment

# Domain Configuration
DOMAIN=localhost.local

# Backend Image Configuration
# Default uses Quarkus defaults: ${user.name}/regattadesk-backend:0.1.0-SNAPSHOT
# Override if you build with custom settings or want to use a specific image
# BACKEND_IMAGE=$USER/regattadesk-backend:0.1.0-SNAPSHOT

# PostgreSQL Configuration
POSTGRES_DB=regattadesk
POSTGRES_USER=regattadesk
POSTGRES_PASSWORD=changeme_postgres_password
POSTGRES_AUTHELIA_DB=authelia
# POSTGRES_PORT only used with docker-compose.dev.yml for direct host access
POSTGRES_PORT=5432

# MinIO Configuration
MINIO_ROOT_USER=regattadesk
MINIO_ROOT_PASSWORD=changeme_minio_password
# MINIO ports only used with docker-compose.dev.yml for direct host access
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Authelia Configuration
# Generate secrets with: openssl rand -base64 32
AUTHELIA_JWT_SECRET=changeme_jwt_secret_min_32_chars
AUTHELIA_SESSION_SECRET=changeme_session_secret_min_32_chars
AUTHELIA_STORAGE_ENCRYPTION_KEY=changeme_encryption_key_min_32_chars

# Traefik Configuration
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_LOG_LEVEL=INFO

# Observability Configuration (only used with docker-compose.observability.yml)
# These ports only exposed with docker-compose.dev.yml for direct host access
JAEGER_UI_PORT=16686
JAEGER_OTLP_GRPC_PORT=4317
JAEGER_OTLP_HTTP_PORT=4318
PROMETHEUS_PORT=9090
