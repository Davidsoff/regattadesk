###############################################################
#                         Users Database                      #
###############################################################

# This file is a template for local development only.
# Copy this file to users_database.yml and update with your own password hashes.
# In production, users should be managed via LDAP or other authentication backends.

# Role Mapping:
# - super_admin: Global admin role, access to all regattas
# - regatta_admin: Full access within a regatta scope
# - head_of_jury: Approve entries, close investigations, assign penalties
# - info_desk: Crew mutations, missing/changed bibs, withdrawals
# - financial_manager: Mark paid per entry or per club
# - operator: Start/finish line operators with line-scan camera UI

# To generate password hashes, run:
# docker run --rm authelia/authelia:latest authelia crypto hash generate argon2 --password 'your-password-here'

users:
  # Super Admin - global access
  superadmin:
    displayname: "Super Admin"
    password: "REPLACE_WITH_YOUR_HASH"
    email: superadmin@regattadesk.local
    groups:
      - super_admin

  # Regatta Admin - full access to regatta
  regattaadmin:
    displayname: "Regatta Admin"
    password: "REPLACE_WITH_YOUR_HASH"
    email: regattaadmin@regattadesk.local
    groups:
      - regatta_admin

  # Head of Jury - approve entries, investigations, penalties
  headofjury:
    displayname: "Head of Jury"
    password: "REPLACE_WITH_YOUR_HASH"
    email: headofjury@regattadesk.local
    groups:
      - head_of_jury

  # Info Desk - crew mutations, bib changes, withdrawals
  infodesk:
    displayname: "Info Desk"
    password: "REPLACE_WITH_YOUR_HASH"
    email: infodesk@regattadesk.local
    groups:
      - info_desk

  # Financial Manager - payment tracking
  financialmanager:
    displayname: "Financial Manager"
    password: "REPLACE_WITH_YOUR_HASH"
    email: financialmanager@regattadesk.local
    groups:
      - financial_manager

  # Operator - line-scan camera UI
  operator:
    displayname: "Operator"
    password: "REPLACE_WITH_YOUR_HASH"
    email: operator@regattadesk.local
    groups:
      - operator
